//- module
borderSize = size * .08

@keyframes lds-dual-ring
  0%
    transform(rotate(0deg))
  100%
    transform(rotate(360deg))

.lds-dual-ring
  display: inline-block
  width: round(size)
  height: round(size)

.lds-dual-ring:after
  content: " "
  display: block
  width: round(size * .8)
  height: round(size * .8)
  margin: round(size * .1)
  border-radius: 50%
  border: round(borderSize) solid color.fg
  border-color: color.fg transparent color.fg transparent
  animation(lds-dual-ring speed linear infinite)
